<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/view_image_app_logo"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:src="@drawable/ic_logo"
        android:transitionName="@string/image_logo_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_text_login_header"
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:text="@string/header_login"
        app:layout_constraintBottom_toBottomOf="@id/view_image_app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_image_app_logo" />

    <View
        android:id="@+id/view_header_underline"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/slate"
        app:layout_constraintBottom_toBottomOf="@id/view_image_app_logo"
        app:layout_constraintStart_toStartOf="@id/view_text_login_header"
        app:layout_constraintEnd_toEndOf="@id/view_text_login_header"
        app:layout_constraintTop_toBottomOf="@id/view_text_login_header" />

</androidx.constraintlayout.widget.ConstraintLayout>
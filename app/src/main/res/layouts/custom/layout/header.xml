<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/view_image_app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_logo"
        android:transitionName="@string/image_logo_transition"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_text_login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/slate"
        android:textSize="18sp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="@id/view_image_app_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_image_app_logo" />

    <View
        android:id="@+id/view_header_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/slate"
        app:layout_constraintBottom_toBottomOf="@id/view_image_app_logo"
        app:layout_constraintLeft_toLeftOf="@id/view_text_login_header"
        app:layout_constraintRight_toRightOf="@id/view_text_login_header"
        app:layout_constraintTop_toBottomOf="@id/view_text_login_header" />

</androidx.constraintlayout.widget.ConstraintLayout>